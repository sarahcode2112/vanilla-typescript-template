{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/", ".eslintrc.js"],
  "exclude": ["test/"]
}
